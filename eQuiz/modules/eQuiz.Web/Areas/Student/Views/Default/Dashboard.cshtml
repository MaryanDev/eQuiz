
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section HeadStyles{
    <link rel="stylesheet" href="~/Areas/Student/Styles/equiz-temp.css" />
}

@section HeadScripts{
    <script src="~/Areas/Student/Scripts/dashboard.service.js"></script>
    <script src="~/Areas/Student/Scripts/dashboard.controller.js"></script>
}


<header>
    <table id='headerTable'>
        <tr>
            <td id='Menu_td'><a href="#">Menu</a></td>
            <td id='User_group_td'>User Group # <a href="#">FullName</a></td>
        </tr>
    </table>
</header>
<hr>
<div id='content' ng-controller="dashboardCtrl">
    <table id='quizzesTable' >
        <thead>
            <tr>
                <th><h2>Quizzes</h2></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="quiz in allQuizes">
                <td>
                    {{quiz.Name}}
                </td>
                <td>
                    {{quiz.StartDate}}
                </td>
                <td>
                    {{quiz.TimeLimitMinutes}}
                </td>
                <td>
                    <a href="#" ng-if="quiz.InternetAccess">Start</a>
                    <div ng-if="!quiz.InternetAccess">Inactive</div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
